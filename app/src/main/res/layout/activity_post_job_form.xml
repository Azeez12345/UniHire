<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostJobForm">

    <Button
        android:id="@+id/PostJobFinalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        app:layout_constraintBottom_toTopOf="@+id/space3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toEndOf="@+id/SaveDraftBtn"
        app:layout_constraintTop_toBottomOf="@+id/space2" />

    <EditText
        android:id="@+id/weightage3"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toEndOf="@+id/p3Spinner"
        app:layout_constraintTop_toBottomOf="@+id/weightage1" />

    <EditText
        android:id="@+id/weightage1"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toEndOf="@+id/p1Spinner"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <EditText
        android:id="@+id/weightage2"
        android:layout_width="120dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/p2Spinner"
        app:layout_constraintTop_toBottomOf="@+id/weightage1" />

    <CheckBox
        android:id="@+id/ResumeInput"
        android:layout_width="110dp"
        android:layout_height="43dp"
        android:layout_marginTop="72dp"
        android:text="Resume"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toEndOf="@+id/ResearchInput"
        app:layout_constraintTop_toBottomOf="@+id/AddressInput" />

    <CheckBox
        android:id="@+id/ResearchInput"
        android:layout_width="116dp"
        android:layout_height="45dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="72dp"
        android:text="Research Grants"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailInput" />

    <CheckBox
        android:id="@+id/PublicationInput"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="Publication"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/AwardInput"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/EducationInput"
        app:layout_constraintTop_toBottomOf="@+id/AddressInput"
        tools:text="Publication" />

    <CheckBox
        android:id="@+id/AwardInput"
        android:layout_width="98dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:text="Awards/Honors"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WorkExpInput" />

    <CheckBox
        android:id="@+id/EducationInput"
        android:layout_width="92dp"
        android:layout_height="43dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="Education"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailInput" />

    <CheckBox
        android:id="@+id/WorkExpInput"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="44dp"
        android:text="Work Experience"
        android:textSize="9.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PhoneInput" />

    <CheckBox
        android:id="@+id/EmailInput"
        android:layout_width="98dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:checked="true"
        android:clickable="false"
        android:text="Email"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameInput" />

    <CheckBox
        android:id="@+id/AddressInput"
        android:layout_width="94dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:checked="true"
        android:clickable="false"
        android:text="Address"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/WorkExpInput"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/EmailInput"
        app:layout_constraintTop_toBottomOf="@+id/GenderInput" />

    <CheckBox
        android:id="@+id/GenderInput"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:clickable="false"
        android:text="Gender"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/PhoneInput"
        app:layout_constraintStart_toEndOf="@+id/NameInput"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <CheckBox
        android:id="@+id/NameInput"
        android:layout_width="98dp"
        android:layout_height="47dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:clickable="false"
        android:text="Name"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post A Job"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <EditText
        android:id="@+id/jobTitle"
        android:layout_width="270dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Job Title"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/dept"
        android:layout_width="273dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Department"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobTitle" />

    <EditText
        android:id="@+id/spec"
        android:layout_width="275dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Specialization"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dept" />

    <EditText
        android:id="@+id/jobDesc"
        android:layout_width="295dp"
        android:layout_height="493dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Job Description"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spec" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Fields"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobDesc" />

    <CheckBox
        android:id="@+id/PhoneInput"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:checked="true"
        android:clickable="false"
        android:text="Phone Number"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Select Priority"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResearchInput" />

    <Spinner
        android:id="@+id/p1Spinner"
        android:layout_width="137dp"
        android:layout_height="29dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <Spinner
        android:id="@+id/p3Spinner"
        android:layout_width="136dp"
        android:layout_height="29dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p2Spinner" />

    <Spinner
        android:id="@+id/p2Spinner"
        android:layout_width="136dp"
        android:layout_height="28dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1Spinner" />

    <Space
        android:id="@+id/space2"
        android:layout_width="118dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@+id/p3Spinner"
        tools:layout_editor_absoluteX="149dp" />

    <Button
        android:id="@+id/SaveDraftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:text="save draft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        app:layout_constraintVertical_bias="0.0" />

    <Space
        android:id="@+id/space3"
        android:layout_width="180dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@+id/SaveDraftBtn"
        tools:layout_editor_absoluteX="118dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>